<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th>Links</th>

      </tr>
    <% @users.each do |user| %>

      <tr>
        <td><%=user.first_name%></td>
        <td><%=user.last_name %></td>
        <td><%=user.email%></td>
        <td>
           <%= link_to 'Show', user %>
            <%= link_to 'Edit', edit_user_path(user) %>
           <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
         </td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
