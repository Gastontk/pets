<h1>Pets#index</h1>
<p>Find me in app/views/pets/index.html.erb</p>


<table>
	<tr>
		<th>Name:</th>
		<th>Breed:</th>
		<th>Modify Pet:</th>
		<th>Owned?</th>
		<th>By Whom?</th>
	</tr>
<% @pets.each do |t| %>

	<tr>
		 <td><%= link_to t.name, pet_path(t) %></td>
		 <td><%= link_to t.breed, "http://www.google.com/search?ie=UTF-8&q=#{t.breed}" %></td>
		 <td><%= link_to "edit", edit_pet_path(t.id) %> | <%=link_to "Kill", pets_destroy_path(t) %></td>
		 <td><% if t.user%>
		 			yes
		 		<%else %>
		 			no
		 		<% end%></td>
		 <td><%if t.user %>
		 		<%=link_to t.user.first_name, user_path(t.user) %>
			 <% else %>
				&empty;
			<% end %>
		 	</td>


	</tr>
<%end%>

</table>
